@model ObituaryApp.Mvc.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>@ViewData["Title"]</h2>
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Information</h5>
                <p class="card-text">
                    <strong>Email:</strong> @Model.Email
                </p>
                <p class="card-text">
                    <strong>Username:</strong> @Model.UserName
                </p>
                <p class="card-text">
                    <strong>Email Confirmed:</strong> @(Model.EmailConfirmed ? "Yes" : "No")
                </p>
            </div>
        </div>
        
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>