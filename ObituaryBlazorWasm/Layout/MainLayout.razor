@using ObituaryBlazorWasm.Services
@inherits LayoutComponentBase
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject ObituaryBlazorWasm.Services.AuthState Auth


<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-end align-items-center" style="background-color:#f5f5f5; padding:10px;">
            @if (IsLoggedIn)
            {
                <button class="btn btn-link login-link" @onclick="Logout">Logout</button>
            }
            else
            {
                <a href="login" class="login-link">Login</a>
            }
        </div>
        

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .login-link {
        color: #007bff;
        text-decoration: none;
        font-weight: 500;
    }

    .login-link:hover {
        text-decoration: underline;
    }

    .top-row {
        border-bottom: 1px solid #ddd;
    }
</style>

@code {
    private bool IsLoggedIn;

    protected override void OnInitialized()
    {
        // Subscribe to AuthState changes
        Auth.OnChange += OnAuthStateChanged;
        IsLoggedIn = Auth.IsLoggedIn;
    }

    private void OnAuthStateChanged()
    {
        IsLoggedIn = Auth.IsLoggedIn;
        InvokeAsync(StateHasChanged); // <— Force UI re-render on state change
    }

    private async Task Logout()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "accessToken");
        Auth.IsLoggedIn = false;
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        Auth.OnChange -= OnAuthStateChanged;
    }
}
